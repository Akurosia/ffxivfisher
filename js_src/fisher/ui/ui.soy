{namespace ff.fisher.ui.soy}


/**
 * HTML for the root page.
 * @param ids
 */
{template .ROOT}
  <div id="{$ids.CENTERED_CONTENT}" class="{css ff-fisher-root}">
  </div>
{/template}


/**
 * HTML for the header.
 * @param ids
 */
{template .HEADER}
  <div class="{css ff-fisher-header}{sp}{css ff-card}">
    <div class="{css ff-fisher-header-clock-label}">
      Eorzean Time:&nbsp;
    </div>
    <div id="{$ids.CLOCK_CONTAINER}" class="{css ff-fisher-header-clock}">
    </div>
    <div id="{$ids.NEW_FISH_BUTTON_CONTAINER}" class="{css ff-fisher-header-new-fish}">
    </div>
  </div>
{/template}


/**
 * HTML for the Eorzea clock.
 * @param ids
 */
{template .EORZEA_CLOCK}
  <div id="{$ids.TIME}" class="{css ff-eorzea-clock}"></div>
{/template}


/**
 * HTML for a weather icon.
 * @param imageSrc The source for the image.
 * @param tooltip The tooltip for the icon.
 */
{template .WEATHER_ICON}
  <img src="{$imageSrc}" class="{css ff-weather}" title="{$tooltip}" />
{/template}
