{namespace ff.fisher.ui.soy}


/**
 * HTML for the component that renders a fish as a row.
 * @param ids
 */
{template .FISH_ROW}
  <div class="{css ff-row}{sp}{css ff-fish-row}">
    <img src="/images/gigantshark.png" class="{css ff-cell}{sp}{css ff-fish-row-icon}">
    </img>
    <div id="{$ids.NAME|id}" class="{css ff-cell}{sp}{css ff-fish-row-name}">
    </div>
    <div id="{$ids.TIME|id}" class="{css ff-cell}{sp}{css ff-fish-row-time}">
    </div>
    <div id="{$ids.WEATHER|id}" class="{css ff-cell}{sp}{css ff-fish-row-weather}">
    </div>
  </div>
{/template}


/**
 * HTML for creating a new fish.
 * @param ids
 */
{template .NEW_FISH_DIALOG}
  <div class="{css ff-table}{sp}{css ff-new-fish-dialog}">
    <div class="{css ff-row}">
      <div class="{css ff-cell}">
        Name:
      </div>
      <input type="text" id="{$ids.NAME_INPUT|id}"
          class="{css ff-fish-name-input}" />
    </div>
    <div class="{css ff-row}">
      <div class="{css ff-cell}">
        Weather:
      </div>
      <input type="text" id="{$ids.WEATHER_INPUT|id}"
          class="{css ff-fish-weather-input}" />
    </div>
  </div>
{/template}
